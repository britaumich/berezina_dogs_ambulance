<%= simple_form_for animal,
  data: { controller: "animal" } do |form| %>
  <% if animal.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(animal.errors.count, "error") %> prohibited this animal from being saved:</h2>

      <ul>
        <% animal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :animal_type_id %>
    <%= form.collection_select(:animal_type_id, @animal_types, :id, :name, { include_blank: "Select ...", required: true }, { class: "input_text_field" }) %>
  </div>

  <div class="my-5">
    <%= form.label :nickname %>
    <%= form.text_field :nickname, class: "input_text_field" %>
  </div>

  <div class="my-5">
    <%= form.label :surname %>
    <%= form.text_field :surname, class: "input_text_field" %>
  </div>

  <div class="my-5">
    <%= form.label :gender %>
    <%= form.select :gender, gender_lists, { class: "input_text_field" } %>
  </div>

  <div class="my-5">
    <%= form.label :arival_date %>
    <%= form.date_field :arival_date, class: "input_text_field" %>
  </div>

  <div class="my-5">
    <%= form.label :from_people %>
    <%= form.text_field :from_people, class: "input_text_field" %>
  </div>

  <div class="my-5">
    <%= form.label :from_place %>
    <%= form.text_field :from_place, class: "input_text_field" %>
  </div>

  <div class="my-5 mr-2">
    <%= form.input :birth_date, as: :date, start_year: Date.today.year - 12,
                                      end_year: Date.today.year, default: { day: 1, month: 1 },
                                      input_html: { class: "inline short_input_text_field ml-2" } %>
  </div>

  <div class="my-5">
    <%= form.label :death_date %>
    <%= form.date_field :death_date, class: "input_text_field" %>
  </div>

  <div class="my-5">
    <%= form.label :color %>
    <%= form.text_field :color, class: "input_text_field" %>
  </div>

  <div class="my-5">
    <%= form.label :aviary_id %>
    <%= form.collection_select(:aviary_id, @aviaries, :id, :name, { include_blank: "Select ..." }, { "data-action": "change->animal#getSections", "data-animal-target": "aviary_select", "class": "input_text_field" } ) %>
  </div>

  <% if @animal.persisted? %>
    <% if @animal.aviary&.has_sections %>
      <div class="" data-animal-target="show_sections">
        <%= form.label :section_id %>
        <%= form.collection_select :section_id, @sections, :id, :name, { include_blank: "Select Section ..."}, { selected: @animal.section_id.present? ? @animal.section_id : "", "data-animal-target": "section", class: "input_text_field" } %>
      </div>
    <% else %>
      <div class="hidden" data-animal-target="show_sections">
        <%= form.label :section_id %>
        <%= form.collection_select :section_id, @sections, :id, :name, { include_blank: "Select Section ..."}, { "data-animal-target": "section", class: "input_text_field" } %>
      </div>
    <% end %>
  <% else %>
    <div class="hidden" data-animal-target="show_sections">
      <%= form.label :section_id %>
      <%= form.collection_select :section_id, @sections, :id, :name, { include_blank: "Select Section ..."}, { selected: @animal.section_id.present? ? @animal.section_id : "", "data-animal-target": "section", class: "input_text_field" } %>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_field :description, class: "input_text_field" %>
  </div>

  <div class="my-5">
    <%= form.label :history %>
    <%= form.text_field :history, class: "input_text_field" %>
  </div>

  <div class="my-5">
    <%= form.label :graduation %>
    <%= form.text_field :graduation, class: "input_text_field" %>
  </div>

  <div class="inline">
    <%= form.submit t('forms.buttons.submit'), class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
