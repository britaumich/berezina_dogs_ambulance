<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Animals" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Animals</h1>
    <%= link_to "New animal", new_animal_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <%= turbo_frame_tag "turbo-animals" do %>
    <div id="maincontent"></div>
    <div class="mb-10" id="animals_listing">
      <div id="animals" class="min-w-full">
        <%= render 'animal_list' %>
      </div>
    </div>
  <% end %>
</div>
