<div class="w-full">

  <% content_for :title, "Animals" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= t('text.Animals') %></h1>
    <%= link_to t('menu.new'), new_animal_path, class: "primary_button" %>
  </div>

  <div data-controller="animal">
    <%= search_form_for @q,
      data: { animal_target: "form",
              turbo_frame: "turbo-animals"
              } do |f| %>
      <div class="col-span-2 mb-4 flex justify-start">
        <p>Group searching conditions by:</p>
        <div class="ml-4">
          <%= f.radio_button :m, 'and', :checked => true %>
          <%= f.label :m, 'and', value: 'and' %>
        </div>
        <div class="ml-4">
          <%= f.radio_button :m, 'or' %>
          <%= f.label :m, 'or', value: 'or' %>
        </div>
      </div>
      <div class="grid grid-cols-2 gap-x-2">
        <div class="">
          <div class="mx-2 mb-1">
            <div>
              <%= f.label :animal_type_id %>
              <%= f.collection_select(:animal_type_id_eq, @animal_types, :id, :name, { include_blank: "Select ..." }, { class: 'input_text_field' }) %>
            </div>
            <div>
              <%= f.label :nickname %>
              <%= f.text_field :nickname_cont, placeholder: "Contains", class: 'input_text_field' %>
            </div>
            <div>
              <%= f.label :surname %>
              <%= f.text_field :surname_cont, placeholder: "Contains", class: 'input_text_field' %>
            </div>
            <div>
              <%= f.label :gender %>
              <%= f.text_field :gender_eq, placeholder: "Equal", class: 'input_text_field' %>
            </div>
            <div class="flex items-end">
              <div class="flex-1 w-1/2">
                <%= f.label :arival_date %>
                <%= f.text_field :arival_date_gteq, placeholder: "From", class: 'input_text_field',
                  data: {
                    controller: "flatpickr",
                    flatpickr_date_format: "Y-m-d"
                  } %>
              </div>
              <div class="ml-1 flex-1 w-1/2">
                <%= f.text_field :arival_date_lteq, placeholder: "To", class: 'input_text_field',
                  data: {
                    controller: "flatpickr",
                    flatpickr_date_format: "Y-m-d"
                  } %>
              </div>
            </div>
          </div>
        </div>
            

        <div class="">
          <div class="mx-2 mb-1">
            <div>
              <%= f.label :aviary_id %>
              <%= f.collection_select(:aviary_id_eq, @aviaries, :id, :name, { include_blank: "Select ..." }, { class: 'input_text_field' }) %>
            </div>
            <div>
              <%= f.label :description %>
              <%= f.text_field :description_cont, placeholder: "Contains", class: 'input_text_field' %>
            </div>
            <div>
              <%= f.label :history %>
              <%= f.text_field :history_cont, placeholder: "Contains", class: 'input_text_field' %>
            </div>
          </div>
        </div>

        <div class="my-2 col-span-2 flex justify-start">
          <div class="mr-2">
            <%= f.submit 'Search', data: { disable_with: false }, class: "primary_button" %>
          </div>
          <div>
            <button type="button" class="tertiary_button"
              data-action='click->animal#clearFilters'>
            
              Clear
           
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= turbo_frame_tag "turbo-animals" do %>
    <div class="mb-10 min-w-full" id="animals_listing">
      <%= render 'animal_list' %>
    </div>
  <% end %>
</div>
