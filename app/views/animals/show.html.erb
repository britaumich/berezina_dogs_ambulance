<div class="mx-auto w-full">
  <div class="grid grid-cols-1 lg:grid-cols-2 items-center">
    <h1><%= @animal.animal_type.name %></h1>
    <div class="lg:grid lg:justify-items-end">
      <%= link_to t('forms.buttons.edit'), edit_animal_path(@animal), class: "primary_button mb-2" %>
      <div class="mt-2">
        <%= link_to animal_path(@animal), data: { turbo_confirm: 'Are you sure?', turbo_method: :delete} do %>
          <span class="tertiary_button">
            <i class="fa fa-times" aria-hidden="true"></i>
            <%= t('forms.buttons.delete') %>
          </span>
        <% end %>
      </div>
      <%= link_to animals_path do %>
        <span class="tertiary_button">
          <i class="fa-solid fa-arrow-left" aria-hidden="true"></i>
          <%= t('forms.buttons.back') %>
        </span>
      <% end %>
    </div>
  </div>
  <div class="grid grid-cols-1 lg:grid-cols-2">
    <div class="grid lg:col-span-2">
      <%= render @animal %>
    </div>
  </div>

  <div class="container p-2 rounded-lg shadow-lg text-xl mb-20 bg-gray-50">
    <h2 class="mb-4">Notes:</h2>
    <%= render partial: "notes/form", locals: { note: Note.new, noteable: @animal } %>

    <%= turbo_stream_from @animal, :notes %>
    <%= tag.div id: "#{dom_id(@animal)}_notes" do %>
      <%= render @animal.notes %>
    <% end %>
  </div>
</div>
