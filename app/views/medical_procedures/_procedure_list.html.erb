<%= turbo_frame_tag 'medical_procedures' do %>
  <div class="min-w-full">
    <table class="mi_table" id="desk-table">
      <thead class="border border-l-0 border-r-0 border-gray-um60">
        <tr>
          <th class="header_th">Animal - Procedure</th>
          <th class="header_th">Date complete</th>
          <th class="header_th">Date planned</th>
          <th class="header_th">Edit</th>
          <th class="header_th">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @medical_procedures.each do |medical_procedure| %>
          <rt>
            <td class="mi_tbody_td">
              <%= link_to medical_procedure_path(medical_procedure), class: "link_to", data: {turbo_frame: "_top"} do %>
                <%= show_animal(medical_procedure.animal) %> - <%= medical_procedure.procedure_type.name %>
              <% end %>
            </td>
            <td class="mi_tbody_td">
              <%= medical_procedure.date_complete %>
            </td>
            <td class="mi_tbody_td">
              <%= medical_procedure.date_planned %>
            </td>
            <td class="mi_tbody_td">
              <%= link_to edit_medical_procedure_path(medical_procedure), data: { turbo_frame: "_top" }, aria: { label: "#{dom_id(medical_procedure)}_edit" } do%>
                <i class="fa fa-pencil text-umgreen"></i>
              <% end %>
            </td>
            <td class="mi_tbody_td">
              <%= link_to medical_procedure_path(medical_procedure), data: { turbo_confirm: 'Are you sure you want to delete this rover?', turbo_method: :delete}, aria: { label: "#{dom_id(medical_procedure)}_delete" }  do %>
                <i class="fa fa-trash-can text-red-umred"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
