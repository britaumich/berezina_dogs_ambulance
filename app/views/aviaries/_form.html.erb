<%= form_with(model: aviary, class: "contents") do |form| %>
  <% if aviary.errors.any? %>
  <div id="error_explanation" class="text-base text-red-950 px-3 pb-2 font-medium">
    <p class="text-lg"><%= t('error', count: aviary.errors.count) %> <%= t('forms.messages.prohibited this record from being saved') %>:</p>

      <ul>
        <% aviary.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :has_sections %>
    <%= form.checkbox :has_sections, class: "check_box" %>
  </div>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "input_text_field", required: true %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: "input_text_field" %>
  </div>

  <div class="inline">
    <%= form.submit t('forms.buttons.submit'), class: "primary_button" %>
  </div>
  <%= link_to aviaries_path do %>
    <span class="tertiary_button"><%= t('forms.buttons.cancel') %>
      <i class="fa fa-times" aria-hidden="true"></i>
    </span>
  <% end %>
<% end %>
