
    <table class="mi_table" id="desk-table">
      <thead class="border border-l-0 border-r-0 border-gray-750">
        <tr>
          <th class="header_th"><%= t('activerecord.attributes.animal.id') %></th>
          <th class="header_th"><%= t('activerecord.attributes.animal.animal_type_id') %></th>
          <th class="header_th"><%= t('activerecord.attributes.animal.nickname') %></th>
          <th class="header_th"><%= t('activerecord.attributes.animal.aviary_id') %></th>
          <th class="header_th"><%= t('forms.buttons.delete from cart') %></th>
        </tr>
      </thead>
      <tbody>
        <% @cart.cart_animals.each do |cart_animal| %>
          <div id="<%= "cart-#{cart_animal.id}" %>">
            <rt>
              <td class="mi_tbody_td">
                <%= link_to cart_animal.animal_id, animal_path(cart_animal.animal_id), data: { turbo_frame: "_top" }, class: "link_to" %>
              </td>
              <td class="mi_tbody_td">
                <%= cart_animal.animal.animal_type.name %>
              </td>
              <td class="mi_tbody_td">
                <%= cart_animal.animal.nickname %>
              </td>
              <td class="mi_tbody_td">
                <%= show_aviary(cart_animal.animal) %>
              </td>
              <td class="mi_tbody_td">
                <%= form_with(url: cart_remove_path) do |f| %>
                  <%= f.hidden_field :id, value: cart_animal.id %>
                  <%= f.button nil do %>
                    <i class="fa fa-trash-can text-red-950"></i></i>
                  <% end %>
                <% end %>
              </td>
            </tr>
          </div>
        <% end %>
      </tbody>
    </table> 
  </div>
