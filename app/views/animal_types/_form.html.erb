<%= form_with(model: animal_type, class: "contents") do |form| %>
  <% if animal_type.errors.any? %>
    <div id="error_explanation" class="text-base text-red-950 px-3 py-2 font-medium rounded-lg mt-3">
      <p class="text-lg"><%= t('error', count: animal_type.errors.count) %> <%= t('forms.messages.prohibited this record from being saved') %>:</p>
      <ul>
        <% animal_type.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "input_text_field", required: true %>
  </div>

  <div class="inline">
    <%= form.submit t('forms.buttons.submit'), class: "primary_button" %>
  </div>
  <%= link_to animal_types_path do %>
    <span class="tertiary_button"><%= t('forms.buttons.cancel') %>
      <i class="fa fa-times" aria-hidden="true"></i>
    </span>
  <% end %>
<% end %>
